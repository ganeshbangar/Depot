
<h1>New Product</h1> 
<%= form_for @product do|f| %>
<% if @user.errors.any? %>
    <div id="error_explanation" >
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this from being saved:</h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
  	<b>Title</b><br /><%= f.text_field :title %>
  </p>
  <p>
  	<b>Description</b><br /><%= f.text_area :description, rows: 6 %>
  </p>
  <p>
  	<b>Img url</b><br /><%= f.text_field :image_url %>
  </p>
  <p>
  	<b>Price</b><br /><%= f.text_field :price %>
  </p>
  <p><%= f.submit "Create" %></p>
<% end %>
<%= link_to 'Back', products_path %>
